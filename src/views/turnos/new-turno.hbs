<div class="col-md-4 mx-auto">
  <div class="card text-center">
    <div class="card-header">
      <h3>New Turno</h3>
    </div>
    <div class="card-body">
      <form action="/turnos/new-turno" method="POST">

        <div class="form-group">
        <select class="form-select especialidad" name="especialidad" required>
          <option value="">Especialidad</option>
          <option value="Odontologia">Odontologia</option>
          <option value="Traumatologia">Traumatologia</option>
        </select>
        </div>

        <div class="form-group caja-doctor">
           <select class="doctor" name="id_doctor">
                <option value="">Elige Primero la especialidad</option>
            </select>
        </div>

        <div class="form-group">
          <label class="form-label fecha-turno">Fecha del Turno</label>
          <input type="date" class="form-control" name="fecha" min="2021-01-01" max="2022-12-31">
        </div>
        <div class="form-group">
          <input type="number" name="hora" class="form-control" placeholder="Hora" autofocus/>
        </div>
        <div class="form-group">
          <textarea name="description" class="form-control" placeholder="Description"></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Save
          </button>
        </div>
      </form>
    </div>
  </div>
</div>