  
<div class="col-md-6 offset-md-3">
    <div class="card">
        <div class="card-header">
            <h1>Registro Doctor</h1>
        </div>
        <!-- Para Mostrar las validaciones -->
        {{#if errores}}
        <div class="card-body">
            
        </div>
        {{/if}}
        <div class="card-footer">
            <form action="/doctor/registro" method="POST"> <!--Donde fue enviado-->
                <div class="form-group">
                    <input type="text" name="name" placeholder="Nombre Completo" class="form-control" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="especialidad" placeholder="especialidad" class="form-control">
                </div>
                <div class="form-group">
                    <input type="number" name="dni" placeholder="DNI" class="form-control">
                </div>
                <div class="form-group">
                    <input type="email" name="email" placeholder="email" class="form-control">
                </div>
                <div class="form-group">
                    <input type="tel" name="phone" placeholder="Phone" class="form-control">
                </div>
                <div class="form-group">
                    <input type="text" name="disponibilidad" placeholder="disponibilidad" class="form-control">
                </div>
                <button class="btn btn-primary btn-block">
                    Add
                </button>
            </form>
        </div>
    </div>
</div>